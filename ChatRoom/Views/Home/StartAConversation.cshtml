
@{
    ViewBag.Title = "StartAConversation";
}

<head>
    <title></title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script> 
    <script src="~/Scripts/AddedScripts/StartAConversation.js" type="text/javascript"></script>
</head>

<h2>Start A Conversation</h2>
<div id="start">
    
    @foreach (var item in ViewBag.Users)
    {
        <h3 class="conversation" value=@item>@item</h3>
        <form class="startForm" id=@item action="@Url.Action("SendMessage", "Home")" method="post">
            <input type="hidden" name="friend" value="@item" />
            <input type="hidden" name="conversationID" value="" />
            <p>Message</p>
            <input type="text" name="message"/>
            <input type="submit" name="Start Conversation" value="Submit" />
        </form>
    }
</div>
